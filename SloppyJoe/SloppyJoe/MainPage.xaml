<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SloppyJoe.MainPage">

    <ScrollView>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label x:Name="title" FontSize="24" Text="Welcome to Sloppy Joe's" Grid.ColumnSpan="2"/>
            
            <Label x:Name="item1" FontSize="18" Grid.Row="1" Text="item #1"/>
            <Label x:Name="price1" FontSize="18" HorizontalOptions="End" 
                   Grid.Row="1" Grid.Column="1" Text="price #1"/>

            <Label x:Name="item2" FontSize="18" Grid.Row="2" Text="item #2"/>
            <Label x:Name="price2" FontSize="18" HorizontalOptions="End"
                   Grid.Row="2" Grid.Column="1" Text="price #2"/>

            <Label x:Name="item3" FontSize="18" Grid.Row="3" Text="item #3"/>
            <Label x:Name="price3" FontSize="18" HorizontalOptions="End"
                   Grid.Row="3" Grid.Column="1" Text="price #3"/>

            <Label x:Name="item4" FontSize="18" Grid.Row="4" Text="item #4"/>
            <Label x:Name="price4" FontSize="18" HorizontalOptions="End"
                   Grid.Row="4" Grid.Column="1" Text="price #4"/>

            <Label x:Name="item5" FontSize="18" Grid.Row="5" Text="item #5"/>
            <Label x:Name="price5" FontSize="18" HorizontalOptions="End"
                   Grid.Row="5" Grid.Column="1" Text="price #5"/>

            <Label x:Name="item6" FontSize="18" Grid.Row="6" Text="item #6"/>
            <Label x:Name="price6" FontSize="18" HorizontalOptions="End"
                   Grid.Row="6" Grid.Column="1" Text="price #6"/>

            <Label x:Name="guacamole" FontSize="18" FontAttributes="Italic" Text="guacamole"
                   Grid.Row="7" Grid.Column="2" HorizontalOptions="End" VerticalOptions="End"/>
        </Grid>
    </ScrollView>

</ContentPage>
